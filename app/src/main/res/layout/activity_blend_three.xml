                            android:layout_marginTop="8dp"
                            android:text="Medium"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="10sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_grinding_three"
