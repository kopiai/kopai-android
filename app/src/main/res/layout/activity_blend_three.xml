            <TextView
                android:id="@+id/tv_description_grinding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Ingin lebih tahu informasi grinding simak panduan berikut"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:transitionName="auth"/>

            <TextView
                android:id="@+id/tv_more_grinding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Pelajari lebih lanjut"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:transitionName="auth"/>

            <LinearLayout
                android:id="@+id/container_grinding_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal"
                android:transitionName="misc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/grinding_coarse"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/card_roasting_background"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iv_grinding_coarse"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/card_image_background"
                            android:scaleType="centerCrop"
                            android:src="@drawable/logo" />

                        <TextView
                            android:id="@+id/tv_grinding_coarse"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:text="Coarse"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="10sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/grinding_medium_coarse"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/card_roasting_background"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iv_grinding_medium_coarse"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/card_image_background"
                            android:scaleType="centerCrop"
                            android:src="@drawable/logo" />

                        <TextView
                            android:id="@+id/tv_grinding_medium_coarse"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:text="Meidum\nCoarse"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="10sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/grinding_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/card_roasting_background"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/iv_grinding_medium"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/card_image_background"
                            android:scaleType="centerCrop"
