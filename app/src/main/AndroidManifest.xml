<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KopAI">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".view.storymaps.StoryMapsActivity"
            android:exported="false"
            android:label="@string/title_activity_story_maps"
            android:theme="@style/Theme.KopAI.NoBar"/>
        <activity
            android:name=".view.addstory.AddStoryActivity"
            android:exported="false" />
        <activity
            android:name=".view.detailstory.DetailStoryActivity"
            android:exported="false" />
        <activity
            android:name=".view.welcome.WelcomeActivity"
            android:exported="false"
            android:theme="@style/Theme.KopAI.NoBar"/>
        <activity
            android:name=".view.register.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.KopAI.NoBar"/>
        <activity
            android:name=".view.login.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.KopAI.NoBar"/>
        <activity
            android:name=".view.main.MainActivity"
            android:exported="false"/>
        <activity
            android:name=".view.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>